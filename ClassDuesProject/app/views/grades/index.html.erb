<div class="px-5 pt-2">
<h1>All Grades</h1>
<%= link_to "Add New Class", new_grade_url, class: "text-primary"%>

<div class="container">
  <div class="row border-top pt-3">
    <div class="col-sm-2">
      <p><strong>Year</strong></p>
    </div>
    <div class="col-sm-4">
      <p><strong>Class Advisor</strong></p>
    </div>
    <div class="col-sm-4">
      <p><strong>Class Advisor</strong></p>
    </div>
  </div>
  <% @grades.each do |q| %>
    <div class="row border-top pt-3">
      <div class="col-sm-2">
        <strong><%= q.gradYear %></strong>
      </div>
      <div class="col-sm-4">
        <p><strong><%= q.classAdvisorOne %></strong></p>

      </div>
      <div class="col-sm-4">
        <p><strong><%= q.classAdvisorTwo %></strong></p>
      </div>
      <div class="col-sm-2">
        <p><strong><%= link_to "View Class Details", grade_url(id: q.id)%></strong></p>
      </div>
    </div>
  <% end %>

  </div>
