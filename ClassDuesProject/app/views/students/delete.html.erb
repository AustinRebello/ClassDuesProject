<div>
  <div class="w-50 mx-auto mt-5">
    <h1>Are you sure you want to delete this?</h1>
    <h2>This can NOT be undone!</h2>
  </div>
  <div class="w-50 mx-auto">
    <h4><%= @student.studentID %></h4>
    <p><%= @student.firstName %></p>
    <p><%= @student.lastName %></p>
  </div>
  <div class="w-50 mx-auto">
      <%= form_with model: @student, class: "nifty_form", url: student_url(:id => @student.id), method: :delete do |f| %>
      <p><%= f.submit "Yes", class: "bg-success text-light rounded p-1"%> <%=link_to "No", students_url %></p>
<% end %>
  </div>
</div>
